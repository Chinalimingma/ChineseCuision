<%- include("components/_header",{siteTitle:"Chinese Cuision"}) %> 
	
<%- include("components/_navbar",{webTitle:"The Only place"}) %>

<!-- login modal //-->
<%- include("components/_login") %>
<!-- reservation modal //-->
<%- include("components/_reservation")%>
<!-- singup modal //-->
<%- include("components/_singup") %>

<!--index page//-->
<div class="container">
  <!-- img banner //-->
  <div class="public-banner">
    <div class="row">
      <div class="col-lg-12">
        <img src="img/banner.jpg" width="1170" height="300" alt="the only place">
      </div>
    </div>
  </div>
  
  <!-- about //-->
  <div class="home-about">
    <div class="row">
      <div class="col-lg-12">
        <div>
          <h1 class="text-center"> Special About </h1>
          <div class="row">
            <div class="col-lg-12">              
              <p class="text-left">
                <ul class="list-group">
                  <li class="list-group-item"><strong>China's regional cuisines (very) generally taste as follows:</strong></li>
                  <li class="list-group-item">Northern China food — salty, simple, less vegetables with wheat as the staple food</li>
                  <li class="list-group-item">Western China food — hearty halal food with lamb the main meat</li>
                  <li class="list-group-item">Central China food — spicy with a lot of seasonings</li>
                  <li class="list-group-item">Eastern China food — sweet and light</li>
                  <li class="list-group-item">Southern minority food — sour</li>
                </ul>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- food thumbs //-->
  <% 
      var homefood=[
      {caption:"Western China Food", img:"western.jpg", hyperlink:"western"},
      {caption:"Sweet Eastern China Food", img:"eastern.jpg", hyperlink:"EasternChina"},
      {caption:"Sour Southern Food", img:"southern.jpg", hyperlink:"SouthernChina"},
      {caption:"Salty North China Food", img:"north.jpg", hyperlink:"northChina"}
  ];%>
      
  <div class="home-food container">
    <div class="row">
       <h1 class="text-center"> Members Recommend </h1> 
       <%homefood.forEach(function(item){ %>     
      <div class="col-lg-3">
        <div class="thumbnail">
          <a href=/"<%=item.hyperlink%>">
            <img src="img/<%=item.img%>" width="250" height="250" alt="<%=item.img%>">
          </a>
          <div class="caption">
            <h4><%= item.caption%></h4>
          </div>          
        </div>                
      </div>
      <% }) %>
      
  <!--Code for the carousel-->
  <!-- reviews slider, wrapped class//-->
  <%
    var pageTitle="Central China food — spicy with a lot of seasonings";
    var sichuanFood=[
      {caption:"Suan La Fen",img:"suan-la-fen.jpg"},
      {caption:"Mapo Tofu",img:"mapo-tofu.jpg"},
      {caption:"Tomato Fish",img:"tomato-fish.jpg"},
    ];
    sichuanFood.forEach(function(item){ }) 
  %>
  <div class="reviews">
    <div class="row">
      <h2 class="text-center"><%= pageTitle%></h2>
    </div>
        <!--Carousel//-->
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>    
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">      
            <div class="thumbnail">
              <img src="img/sichuanFood/suan-la-fen.jpg" width="250" height="250" alt="suanLaFen">
              <div class="carousel-caption">
                <h3>Suan La Fen</h3>                                            
              </div>
            </div>                  
          </div>
          
          <div class="item">
            <div class="thumbnail">
              <img src="img/sichuanFood/mapo-tofu.jpg" width="250" height="250" alt="MapoTofu">
              <div class="carousel-caption">
                <h3>Mapo Tofu</h3>                                              
              </div>
            </div>    
        </div>
        <div class="item">
          <div class="thumbnail">
            <img src="img/sichuanFood/tomato-fish.jpg" width="250" height="250" alt="tomato-fish">
            <div class="carousel-caption">
              <h3>Tomato Fish</h3>                      
            </div>
          </div>     
        </div>
        
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>     
  </div>  
</div>
</div>
 
	<!-- footer //-->
<%-include("components/_footer")%>